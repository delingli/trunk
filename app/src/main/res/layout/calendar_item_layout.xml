<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="@dimen/calendar_item_layout_padding">
    <!-- android:background="@color/cell_bg"-->
    <TextView
        android:id="@+id/calendar_item_tv_day"
        style="@style/CalendarItemDayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/calendar_item_padding"
        android:textColor="@color/defalut_day_txt" />

    <TextView
        android:id="@+id/calendar_tip"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:background="@color/white" />
</LinearLayout>