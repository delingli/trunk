<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/distance_280"
                android:background="@drawable/beijing"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/distance_10"
        android:orientation="horizontal"
        android:padding="@dimen/distance_15">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/distance_59"
            android:layout_height="@dimen/distance_59"
            android:src="@drawable/morentouxiang"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/distance_10"
            android:text="白天不懂夜的黑"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size_23"/>
    </LinearLayout>
</RelativeLayout>
