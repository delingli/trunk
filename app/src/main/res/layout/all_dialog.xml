<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/distance_25"
        android:layout_marginRight="@dimen/distance_25"

        android:background="@drawable/clear_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_15"
            android:background="@color/white_ffffff"
            android:gravity="center|left"
            android:paddingTop="@dimen/distance_20"
            android:text="修改邮箱"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_17"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/distance_41"
            android:layout_marginLeft="@dimen/distance_15"
            android:layout_marginRight="@dimen/distance_15"
            android:layout_marginTop="@dimen/distance_10"
            android:background="@drawable/bg_gray_line"
            android:gravity="center|left"
            android:paddingLeft="@dimen/distance_10"
            android:paddingRight="@dimen/distance_10"
            android:text="是否立即更新？"
            android:id="@+id/et_str"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/text_size_15"/>

        <View
            style="@style/space_line"
            android:layout_marginTop="@dimen/distance_30"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/center_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/relativelayout_backgound_shape_left"
                android:gravity="center"
                android:padding="@dimen/distance_10"
                android:text="@string/qx"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_size_16"/>

            <View
                style="@style/space_line_v"
                android:layout_height="match_parent"></View>

            <TextView
                android:id="@+id/sure_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/relativelayout_backgound_shape_left"
                android:gravity="center"
                android:padding="@dimen/distance_10"
                android:text="@string/qd"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>