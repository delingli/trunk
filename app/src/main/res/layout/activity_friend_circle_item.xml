<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_F5F6F8"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_15"
        android:background="@color/white_ffffff"
        android:orientation="vertical"

        android:padding="@dimen/distance_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_creat_head"
                android:layout_width="@dimen/height_45"
                android:layout_height="@dimen/height_45"
                android:src="@drawable/morentouxiang"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_10">

                <TextView
                    android:id="@+id/tv_creat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈雅静"
                    android:textColor="@color/blue_12B7F5"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/tv_creat_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_creat_name"
                    android:layout_marginTop="@dimen/distance_10"
                    android:text="呼吸新款限量气垫BB 很清透自然，孕妈或者备孕妈妈都是找我要的"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/text_size_15"/>

                <LinearLayout
                    android:id="@+id/ll_image_group1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_creat_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_content_1"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_2"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_3"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_image_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_image_group1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_content_4"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_5"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_6"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_image_group3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_image_group2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_content_7"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_8"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>

                    <ImageView
                        android:id="@+id/iv_content_9"
                        android:layout_width="@dimen/height_65"
                        android:layout_height="@dimen/height_65"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/tuceng_4"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_image_group3">

                    <TextView
                        android:id="@+id/tv_creat_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center|left"
                        android:text="5分钟前"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/text_size_12"/>

                    <ImageView
                        android:id="@+id/iv_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/dianzan_off"/>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_zan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_zan_show"
                android:layout_width="@dimen/distance_40"
                android:layout_height="@dimen/distance_40"
                android:padding="@dimen/distance_10"
                android:src="@drawable/dianzan_on"/>

            <LinearLayout
                android:id="@+id/ll_image_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance_10"
                android:layout_marginRight="@dimen/distance_10"
                android:layout_toRightOf="@+id/iv_zan_show"
                android:orientation="vertical">
                <!-- Android 动态添加图片 换行    参照http://www.2cto.com/kf/201409/334373.html-->
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            />
        <!-- textView.setText(Html.fromHtml("<font size=\"3\" color=\"red\">今天天气好吗？</font><font size=\"3\" color=\"green\">挺好的</font>"));   -->
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:padding="@dimen/distance_10"
            android:text="查看更多"
            android:textColor="@color/blue_1285DD"
            android:textSize="@dimen/text_size_14"
            />

        <View
            style="@style/space_line"></View>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_5"

            android:paddingTop="@dimen/dp_5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_line_gray"
                android:hint="评论"
                android:textSize="@dimen/text_size_14"/>

            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/biaoqing"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
